<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/periodText"
        android:layout_width="126dp"
        android:layout_height="54dp"
        android:layout_marginEnd="72dp"
        android:lineSpacingExtra="10sp"
        android:text="@string/generate_report_cat_dp"
        android:textAlignment="textStart"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="@+id/editPeriod"
        app:layout_constraintEnd_toStartOf="@+id/editPeriod"
        app:layout_constraintTop_toBottomOf="@+id/editCategory"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/editPeriod"
        android:layout_width="190dp"
        android:layout_height="55dp"
        android:ems="10"
        android:hint="@string/search_period_field_hint"
        android:importantForAutofill="no"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editCategory" />

    <TextView
        android:id="@+id/nameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:text="@string/generate_report_name"
        app:layout_constraintBottom_toBottomOf="@+id/editName"
        app:layout_constraintEnd_toStartOf="@+id/editName"
        app:layout_constraintTop_toBottomOf="@+id/buttonEditLot"
        app:layout_constraintVertical_bias="0.542" />

    <EditText
        android:id="@+id/buttonEditLot"
        android:layout_width="134dp"
        android:layout_height="37dp"
        android:ems="10"
        android:hint="@string/search_lot_field_hint"
        android:importantForAutofill="no"
        android:inputType="text"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/lotText"
        tools:layout_editor_absoluteY="112dp" />

    <TextView
        android:id="@+id/lotText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="@string/generate_report_lot"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/buttonEditLot"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/buttonEditLot"
        app:layout_constraintVertical_bias="0.444" />

    <EditText
        android:id="@+id/editName"
        android:layout_width="190dp"
        android:layout_height="55dp"
        android:ems="10"
        android:hint="@string/search_name_field_hint"
        android:importantForAutofill="no"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonEditLot" />

    <EditText
        android:id="@+id/editCategory"
        android:layout_width="190dp"
        android:layout_height="55dp"
        android:ems="10"
        android:hint="@string/search_category_field_hint"
        android:importantForAutofill="no"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editName" />

    <TextView
        android:id="@+id/categoryText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:text="@string/generate_report_cat"
        app:layout_constraintBottom_toBottomOf="@+id/editCategory"
        app:layout_constraintEnd_toStartOf="@+id/editCategory"
        app:layout_constraintTop_toBottomOf="@+id/editName"
        app:layout_constraintVertical_bias="0.547" />

    <Button
        android:id="@+id/reportButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="96dp"
        android:text="@string/generate_report"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>